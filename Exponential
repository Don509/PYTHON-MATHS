# Function to calculate exponential value
def calculate_exponential(base, exponent):
    return base ** exponent

# Input: Base and exponent values
base = float(input("Enter the base number: "))
exponent = float(input("Enter the exponent: "))

# Calculate the exponential value
result = calculate_exponential(base, exponent)

# Print the result
print(f"{base} raised to the power of {exponent} is {result:.4f}")
